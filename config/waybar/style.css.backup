@define-color background #240e2b;
@define-color border #c7fbf2;
@define-color hover #121636;
@define-color active #000000;
@define-color foreground #c7fbf2;

* {
  font-family: "CaskaydiaCove Nerd Font", "Font Awesome 6 Free", "Font Awesome 6 Free Solid";
  font-weight: bold;
  font-size: 15px;
  color: @foreground;
}

#waybar {
  background-color: rgba(0, 0, 0, 0);
  border: none;
  box-shadow: none;
}

#workspaces,
#window,
#tray {
  background-color: @background;
  padding: 4px 6px;
  margin-top: 6px;
  margin-left: 6px;
  margin-right: 6px;
  border-radius: 10px;
  border: 2px solid @border;
}

#clock,
#custom-home {
  background-color: @background;
  border-top: 2px solid @border;
  border-bottom: 2px solid @border;
  border-right: 2px solid @border;
  margin-top: 6px;
  margin-right: 8px;
  padding: 4px 8px;
  border-radius: 0 10px 10px 0;
  border-width: 2px;
}

#network,
#custom-lock {
  background-color: @background;
  border-top: 2px solid @border;
  border-bottom: 2px solid @border;
  border-left: 2px solid @border;
  margin-top: 6px;
  margin-left: 6px;
  padding: 4px 2px;
  border-radius: 10px 0 0 10px;
  border-width: 2px;
}

#custom-power,
#custom-reboot,
#bluetooth,
#battery,
#pulseaudio,
#backlight,
#custom-temperature,
#memory,
#cpu {
  background-color: @background;
  border-top: 2px solid @border;
  /* Applies a 2px border to the top */
  border-bottom: 2px solid @border;
  /* Applies a 2px border to the bottom */
  margin-top: 6px;
  padding: 4px 2px;
}

#custpm-temperature.critical,
#pulseaudio.muted {
  color: #FF0000;
  padding-top: 0;
}

#bluetooth:hover,
#network:hover,
#backlight:hover,
#battery:hover,
#pulseaudio:hover,
#custom-temperature:hover,
#memory:hover,
#cpu:hover,
#clock:hover,
#custom-lock:hover,
#custom-reboot:hover,
#custom-power:hover,
#taskbar #window:hover {
  background-color: @hover;
}

#workspaces button:hover {
  background-color: @hover;
  padding: 2px 8px;
  margin: 0 2px;
  border-radius: 10px;
}

#workspaces button.active {
  background-color: @active;
  color: @active;
  padding: 2px 8px;
  margin: 0 2px;
  border-radius: 10px;
}

#workspaces button {
  background: transparent;
  border: none;
  color: @active;
  padding: 2px 8px;
  margin: 0 2px;
  font-weight: bold;
}

#window {
  font-weight: 500;
  font-style: italic;
}

#taskbar {
  background-color: @background;
  border: 2px solid @border;
  padding: 4px 6px;
  margin-top: 6px;
  margin-left: 6px;
  margin-right: 6px;
  border-radius: 10px;
}

#taskbar button {
  background: transparent;
  border: none;
  color: @active;
  padding: 2px 8px;
  margin: 2px;
  font-weight: bold;
}

#taskbar button.active {
  background-color: @active;
  color: @active;
  padding: 2px 8px;
  margin: 2px;
  border-radius: 10px;
}

#taskbar button:hover {
  background-color: @hover;
  padding: 2px 8px;
  margin: 2px;
  border-radius: 10px;
}
