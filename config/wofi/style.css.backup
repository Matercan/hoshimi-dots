@define-color border #ffffff;
@define-color foreground #ffffff;
@define-color background #000000;
@define-color active #2c3f7c;

* {
  font-family: 'CaskaydiaCove Nerd Font', monospace;
  font-size: 18px;
}

window {
  border: 2px solid @border;
  border-radius: 8px;
  background-color: @background;
}

#input {
  border: 2px solid @border;
  border-radius: 8px;
  color: @foreground;
  background-color: transparent;
}

#text {
  margin: 5px;
  border: none;
  color: @foreground;
}

#entry:selected {
  border: 2px solid @border;
  background-color: transparent;
}

#icons:selected {
  all:unset;
}

#entry:selected #text {
  all: unset;
  color: @active;
}
